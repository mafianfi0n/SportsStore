@model IEnumerable<string>
<div style="background-color: aliceblue;" class="btn-group btn-group-sm btn-group-justified">
    @Html.ActionLink("Home", "List", "Product", new { @class = "btn btn-default btn-sm" })
    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
        {
            controller = "Product",
        action = "List",
        category = link,
        page = 1
        }, new
        {
        @class = "btn btn-default btn-sm form-submit"
        + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
        })
    }
</div>
<style>
    div{
        background-color:aliceblue;
    }
</style>