@model SportsStore.WebUI.Models.CartIndexViewModel
@{
    ViewBag.Title = "Sports Store: Your Cart";
}
<h2 style="color:black;">Your cart</h2>
<table id="cartTable" class="table">
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Product.Name</td>
                <td class="text-right">@line.Product.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Quantity * line.Product.Price).ToString("c"))
                </td>
                <td>
                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                    {
                        @Html.Hidden("ProductId", line.Product.ProductID)
                        @Html.HiddenFor(x => x.ReturnUrl)
                        <input class="btn btn-sm btn-warning"
                               type="submit" value="Remove" />
                    }
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                @Model.Cart.ComputeTotalValue().ToString("c")
            </td>
        </tr>
    </tfoot>
</table>
<div id="shop" class="text-center">
    <a id="shop" class="btn btn-primary" href="@Model.ReturnUrl">Continue shopping</a>
    @Html.ActionLink("Checkout now", "Checkout", null, new { @class = "btn btn-primary" }, new { @id = "shop1" })
</div>
<style>
    body{
        background-color: peachpuff;
        border-radius: 20%;
    }
    a#shop {
        background-color: #00CED1;
        color: black;
        border-style: solid;
        border-width: 2px;
        border-color: black;
        font: 17px Arial, sans-serif;
        width:150px;
        height:25px;
        padding:0px;
        margin-top:14px;
    }
    a#shop1 {
        background-color: #00CED1;
        color: black;
        border-style: solid;
        border-width: 2px;
        border-color: black;
        font: 20px Arial, sans-serif;
        border-radius: 20%;
    }
    a#menu{
        color:red;
    }
    input#button {
        background-color: peachpuff;
        color: black;
        border-style: solid;
        border-width: 2px;
        border-color: black;
        margin-left: 35%;
        margin-top: 5%;
        font: 25px Arial, sans-serif;
    }
    #cartTable td {
        vertical-align: middle;
    }
</style>